{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules",
    "cors": [
      {
        "origin": [
          "http://localhost:3000",
          "https://swiftflow.world",
          "https://www.swiftflow.world"
        ],
        "method": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
        "maxAgeSeconds": 3600,
        "responseHeader": [
          "Content-Type",
          "Authorization"
        ]
      }
    ]
  }
}

